@using M4PL.Web.Providers
@using M4PL.Entities
@using M4PL.Entities.Support;
@using System.Web.UI.WebControls
@model  M4PL.Web.Models.ReportResult<M4PL.APIClient.ViewModels.Job.JobReportView>
@{

    Model.ReportRoute.OwnerCbPanel = string.Concat(Model.ReportRoute.Controller, Model.ReportRoute.Action, "CbPanel");
    var customerDropdown = Model.Record.CompanyId.GetCustomerCompanyDropDown("Customer", Model, (Model.Record.ParentId > 0) ? Model.Record.ParentId : Model.SessionProvider.ActiveUser.OrganizationId);

    customerDropdown.ValueChangedEvent = string.Format("function(s, e) {{DevExCtrl.ComboBox.CustomerLocationCbPanelChange(s, e)}}");
    Model.Record.Id = 0;
    Model.ReportRoute.Location = Model.Record.Location;
    Model.ReportRoute.StartDate = Model.Record.StartDate;
    Model.ReportRoute.EndDate = Model.Record.EndDate;

    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
        @Html.Action(MvcConstants.ActionDropDownViewTemplate, M4PL.Entities.EntitiesAlias.Common.ToString(), new { Area = string.Empty, strDropDownViewModel = Newtonsoft.Json.JsonConvert.SerializeObject(customerDropdown) })
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
        @{
            Html.RenderPartial("CustomerLocation", Model);
        }
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
        @Html.EditorFor(t => t.Record.StartDate)
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
        @Html.EditorFor(t => t.Record.EndDate)
    </div>
    <div class="col-md-12 no-padding">
        @Html.DevExpress().Button(settings =>
   {
       settings.Name = "btn" + Model.CallBackRoute.Controller + "GetVocReport";
       settings.EnableTheming = true;
       settings.Text = "VOC Report";
       settings.AllowFocus = false;
       settings.ControlStyle.CssClass = "form-btn";
       settings.ClientSideEvents.Click = string.Format("function(s, e, rprtVwrCtrl, rprtVwrRoute) {{M4PLCommon.VocReport.GetVocReportByFilter(s, e, {0}, {1}); }}", Model.ReportRoute.OwnerCbPanel, Newtonsoft.Json.JsonConvert.SerializeObject(Model.ReportRoute));
   }).GetHtml()
    </div>
    if (Model.Record != null)
    {
        Html.RenderAction(MvcConstants.ActionInnerCallBackPanel, new { strRoute = Newtonsoft.Json.JsonConvert.SerializeObject(Model.ReportRoute) });
    }
}