@using M4PL.Web.Providers
@model M4PL.Web.Models.ReportResult<M4PL.APIClient.ViewModels.Job.JobReportView>
@{
    var programCodeDropDown = Model.Record.ProgramIdCode.GetStringDropDown(M4PL.Entities.EntitiesAlias.JobAdvanceReport, "Id", "ProgramIdCode", "Program Code", false, false, string.Empty, M4PL.Entities.Permission.All, Model.Record.CompanyId);
    programCodeDropDown.OnInit = "M4PLCommon.AdvancedReport.DefaultSelectedProgram(s,e);";
    programCodeDropDown.ValueChangedEvent = string.Format("function(s, e) {{DevExCtrl.ComboBox.DestinationByProgramCustomerCbPanelChange(s, e)}}");

}
@Html.DevExpress().CallbackPanel(settings =>
{
    settings.Name = "ProgramByCustomerCbPanel";
    settings.CallbackRouteValues = new { Controller = Model.CallBackRoute.Controller, Action = "ProgramByCustomer", Area = Model.CallBackRoute.Area, model = Newtonsoft.Json.JsonConvert.SerializeObject(Model.Record) };
    settings.SetContent(() =>
    {

        ViewContext.Writer.Write(Html.Action(MvcConstants.ActionDropDownViewTemplate, M4PL.Entities.EntitiesAlias.Common.ToString(),
           new { Area = string.Empty, strDropDownViewModel = Newtonsoft.Json.JsonConvert.SerializeObject(programCodeDropDown) }));

    });
}).GetHtml()