@using M4PL.Entities
@using System.Web.UI.WebControls
@using M4PL.Web.Providers
@model  M4PL.Web.Models.FormResult<M4PL.Entities.Job.JobSeller>
@{
    ViewBag.Title = Model.PageName;
    var nameSuffix = string.Format("{0}Seller", Model.ControlNameSuffix);
    var sellerStateDropDownViewModel = Model.Record.JobSellerState.GetStringDropDown(EntitiesAlias.State, "StateAbbr", "JobSellerState", Model.ColumnSettings.FirstOrDefault("JobSellerState").ColAliasName, Model.ColumnSettings.FirstOrDefault("JobSellerState").IsRequired, Model.IsPopUp, string.Empty, Model.Permission, Model.Record.Id);
    var deliveryStateDropDownViewModel = Model.Record.JobDeliveryState.GetStringDropDown(EntitiesAlias.State, "StateAbbr", "JobDeliveryState"+ nameSuffix, Model.ColumnSettings.FirstOrDefault("JobDeliveryState").ColAliasName, Model.ColumnSettings.FirstOrDefault("JobDeliveryState").IsRequired, Model.IsPopUp, string.Empty, Model.Permission, Model.Record.Id);
    var changeEvent = "function(s,e,extnNameOrSuffix,tabNames){ M4PLJob.FormView.SetJobOriginDestinationCtrlValues(s,e,'" + Model.ControlNameSuffix + "','" + WebApplicationConstants.JobTabNames + "');}";
    var changeEventWithCheckDateValid = "M4PLJob.FormView.SetJobOriginDestinationCtrlValues(s,e,'" + Model.ControlNameSuffix + "','" + WebApplicationConstants.JobTabNames + "'); DevExCtrl.DateEdit.OnChangeCheckIsPreviousDate(s,e);";


    var onInit = "M4PLJob.FormView.OnInitSetJobOriginDestinationCtrlValues(s,e,'" + Model.ControlNameSuffix + "','" + WebApplicationConstants.JobTabNames + "');";

    //var onInit = "function(s,e,extnNameOrSuffix,tabNames){ M4PLJob.FormView.OnInitSetJobOriginDestinationCtrlValues(s,e,'" + Model.ControlNameSuffix + "','" + WebApplicationConstants.JobTabNames + "');}";

    var onDateInit = "function(s,e,extnNameOrSuffix,tabNames){ DevExCtrl.DateEdit.OnDateTimeInit(s, e); M4PLJob.FormView.OnInitSetJobOriginDestinationCtrlValues(s,e,'" + Model.ControlNameSuffix + "','" + WebApplicationConstants.JobTabNames + "');}";

    var onInitDDl = "M4PLJob.FormView.OnInitSetJobOriginDestinationCtrlValues(s,e,'" + Model.ControlNameSuffix + "','" + WebApplicationConstants.JobTabNames + "');";

    sellerStateDropDownViewModel.ValueChangedEvent = changeEvent;
    deliveryStateDropDownViewModel.ValueChangedEvent = changeEvent;
    deliveryStateDropDownViewModel.OnInit = onInitDDl;

}

<div class="col-sm-12 col-md-12 col-lg-12 overflow-visible no-padding">
    <div class="col-sm-8 col-md-8 col-lg-6 no-padding-left">
        @Html.DevExpress().RoundPanel(settings =>
   {
       settings.Name = "pnlJobSellerDetail";
       settings.Width = Unit.Percentage(100);
       settings.AllowCollapsingByHeaderClick = true;
       settings.ShowCollapseButton = true;
       settings.HeaderText = "Seller";
       settings.Collapsed = false;
       settings.ControlStyle.CssClass = "form-layout";
       settings.SetContent(() =>
       {

           ViewContext.Writer.Write("<div class='col-md-12 col-lg-12 job-origin-destination  no-padding'>");
           ViewContext.Writer.Write("<div class='form-row-group job-site-name'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobSellerSiteName).ToHtmlString());
           ViewContext.Writer.Write("</div>");
           ViewContext.Writer.Write("<div class='form-row-group col-fixed-30 state-privance'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobSellerSitePOC).ToHtmlString());
           ViewContext.Writer.Write("</div>");
           ViewContext.Writer.Write("<div class='form-row-group state-privance col-fixed-16 remove-margin-right'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobSellerSitePOCPhone, new { MakeSkypeCall = true }).ToHtmlString());
           ViewContext.Writer.Write("</div>");
           ViewContext.Writer.Write("<div class='form-row-group job-site-name'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobSellerSitePOCEmail).ToHtmlString());
           ViewContext.Writer.Write("</div>");
           ViewContext.Writer.Write("<div class='form-row-group job-site-name'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobSellerStreetAddress).ToHtmlString());
           ViewContext.Writer.Write("</div>");

           ViewContext.Writer.Write("<div class='form-row-group job-site-name'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobSellerStreetAddress2).ToHtmlString());
           ViewContext.Writer.Write("</div>");
           ViewContext.Writer.Write("<div class='form-row-group col-fixed-20'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobSellerCity).ToHtmlString());
           ViewContext.Writer.Write("</div>");
           ViewContext.Writer.Write("<div class='form-row-group col-fixed-25 state-privance remove-margin-right'>" + Html.Action(MvcConstants.ActionDropDownViewTemplate, EntitiesAlias.Common.ToString(), new { Area = string.Empty, strDropDownViewModel = Newtonsoft.Json.JsonConvert.SerializeObject(sellerStateDropDownViewModel) }) + "</div>");

           ViewContext.Writer.Write("<div class='form-row-group col-fixed-20'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobSellerPostalCode).ToHtmlString());
           ViewContext.Writer.Write("</div>");

           ViewContext.Writer.Write("<div class='form-row-group col-fixed-25  state-privance remove-margin-right'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobSellerCountry).ToHtmlString());
           ViewContext.Writer.Write("</div>");

           ViewContext.Writer.Write("</div>");

       });
   }).GetHtml()

        @Html.DevExpress().RoundPanel(settings =>
   {
       settings.Name = "pnlJobSecondPOC";
       settings.Width = Unit.Percentage(100);
       settings.AllowCollapsingByHeaderClick = true;
       settings.ShowCollapseButton = true;
       settings.HeaderText = "2nd POC";
       settings.Collapsed = false;
       settings.ControlStyle.CssClass = "form-layout";
       settings.SetContent(() =>
       {
           ViewContext.Writer.Write("<div class='col-md-12 col-lg-12  no-padding'>");
           ViewContext.Writer.Write("<div class='form-row-group job-site-name'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobSellerSitePOC2).ToHtmlString());
           ViewContext.Writer.Write("</div>");
           ViewContext.Writer.Write("<div class='form-row-group job-site-name'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobSellerSitePOCPhone2, new { MakeSkypeCall = true }).ToHtmlString());
           ViewContext.Writer.Write("</div>");
           ViewContext.Writer.Write("<div class='form-row-group job-site-name'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobSellerSitePOCEmail2).ToHtmlString());
           ViewContext.Writer.Write("</div>");
           ViewContext.Writer.Write("</div>");

       });
   }).GetHtml()
    </div>

    <div class="col-sm-8 col-md-8 col-lg-6 dest-div">
        @Html.DevExpress().RoundPanel(settings =>
   {
       settings.Name = "pnlJobDeliveryDetail";
       settings.Width = Unit.Percentage(100);
       settings.AllowCollapsingByHeaderClick = true;
       settings.ShowCollapseButton = true;
       settings.HeaderText = "Destination";
       settings.Collapsed = false;

       settings.ControlStyle.CssClass = "form-layout";
       settings.SetContent(() =>
       {
           ViewContext.Writer.Write("<div class='col-md-12 col-lg-10 job-origin-destination no-padding'>");
           ViewContext.Writer.Write("<div class='form-row-group job-site-name'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobDeliverySiteName, new { NameSuffix = nameSuffix, onTextChange = changeEvent, OnInit = onInit }).ToHtmlString());
           ViewContext.Writer.Write("</div>");
           ViewContext.Writer.Write("<div class='form-row-group col-fixed-30 state-privance'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobDeliverySitePOC, new { NameSuffix = nameSuffix, onTextChange = changeEvent, OnInit = onInit }).ToHtmlString());
           ViewContext.Writer.Write("</div>");
           ViewContext.Writer.Write("<div class='form-row-group state-privance col-fixed-16 remove-margin-right'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobDeliverySitePOCPhone, new { NameSuffix = nameSuffix, onTextChange = changeEvent, OnInit = onInit, MakeSkypeCall = true }).ToHtmlString());
           ViewContext.Writer.Write("</div>");
           ViewContext.Writer.Write("<div class='form-row-group job-site-name'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobDeliverySitePOCEmail, new { NameSuffix = nameSuffix, onTextChange = changeEvent, OnInit = onInit }).ToHtmlString());
           ViewContext.Writer.Write("</div>");
           ViewContext.Writer.Write("<div class='form-row-group job-site-name'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobDeliveryStreetAddress, new { NameSuffix = nameSuffix, onTextChange = changeEvent, OnInit = onInit }).ToHtmlString());
           ViewContext.Writer.Write("</div>");

           ViewContext.Writer.Write("<div class='form-row-group job-site-name'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobDeliveryStreetAddress2, new { NameSuffix = nameSuffix, onTextChange = changeEvent, OnInit = onInit }).ToHtmlString());
           ViewContext.Writer.Write("</div>");
           ViewContext.Writer.Write("<div class='form-row-group col-fixed-20'>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobDeliveryCity, new { NameSuffix = nameSuffix, onTextChange = changeEvent, OnInit = onInit }).ToHtmlString());
           ViewContext.Writer.Write("</div>");
           ViewContext.Writer.Write("<div class='form-row-group col-fixed-25 state-privance remove-margin-right'>" + Html.Action(MvcConstants.ActionDropDownViewTemplate, EntitiesAlias.Common.ToString(), new { Area = string.Empty, strDropDownViewModel = Newtonsoft.Json.JsonConvert.SerializeObject(deliveryStateDropDownViewModel) }) + "</div>");

           ViewContext.Writer.Write("<div class='form-row-group col-fixed-20 '>");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobDeliveryPostalCode, new { NameSuffix = nameSuffix, onTextChange = changeEvent, OnInit = onInit }).ToHtmlString());
           ViewContext.Writer.Write("</div>");

           ViewContext.Writer.Write("<div class='form-row-group col-fixed-25 state-privance remove-margin-right' >");
           ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobDeliveryCountry, new { NameSuffix = nameSuffix, onTextChange = changeEvent, OnInit = onInit }).ToHtmlString());
           ViewContext.Writer.Write("</div>");


           ViewContext.Writer.Write("</div>");

           @Html.DevExpress().FormLayout(
                    contactEmailsettings =>
                    {
                        contactEmailsettings.Name = "SellerDelivery";
                        contactEmailsettings.ControlStyle.CssClass = "pickup-date";

                        contactEmailsettings.Items.AddGroupItem(cEmailsettings =>
                        {
                            cEmailsettings.Caption = "Delivery";
                            cEmailsettings.Items.Add(n =>
                            {
                                n.Caption = "";
                                n.SetNestedContent(() =>
                                {

                                    ViewContext.Writer.Write("<div class='form-row-group job-timeplanned'>");
                                    ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobDeliveryDateTimeBaseline, new { NameSuffix = nameSuffix, OnChangeEvent = changeEventWithCheckDateValid, OnInit = onDateInit, EnableTimeSection = true, DisplayFromRight = true }).ToHtmlString());
                                    ViewContext.Writer.Write("</div>");

                                    ViewContext.Writer.Write("<div class='form-row-group job-timeplanned'>");
                                    ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobDeliveryDateTimePlanned, new { NameSuffix = nameSuffix, OnChangeEvent = changeEventWithCheckDateValid, OnInit = onDateInit, EnableTimeSection = true, DisplayFromRight = true }).ToHtmlString());
                                    ViewContext.Writer.Write("</div>");

                                    ViewContext.Writer.Write("<div class='form-row-group job-timeplanned'>");
                                    ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobDeliveryDateTimeActual, new { NameSuffix = nameSuffix, OnChangeEvent = changeEventWithCheckDateValid, OnInit = onDateInit, EnableTimeSection = true, SetCurrentDate = false, DisplayFromRight = true }).ToHtmlString());
                                    ViewContext.Writer.Write("</div>");

                                    ViewContext.Writer.Write("<div class='form-row-group job-timeplanned'>");
                                    ViewContext.Writer.Write(Html.EditorFor(m => m.Record.JobDeliveryTimeZone, new { NameSuffix = nameSuffix, onTextChange = changeEvent, OnInit = onInit }).ToHtmlString());
                                    ViewContext.Writer.Write("</div>");



                                });
                            });
                        });
                    }
                ).GetHtml();

       });
   }).GetHtml()


    </div>
</div>