@model M4PL.Entities.Support.MvcRoute

@using (Html.BeginForm())
{
    Html.DevExpress().CallbackPanel(settings =>
    {
        settings.Name = "JobCardViewCbPanel";
        settings.CallbackRouteValues = new
        {
            Controller = "JobCard",
            Action = "DataView",
            Area = "Job",
            OwnerCbPanel = "AppCbPanel"
        };
        settings.SetContent(() =>
        {
            ViewContext.Writer.Write(Html.Action(MvcConstants.ActionDataView, M4PL.Entities.EntitiesAlias.JobCard.ToString(), new { strRoute = Newtonsoft.Json.JsonConvert.SerializeObject(Model), filterId = ViewBag.FilterId }));
        });
    }).GetHtml();
}
