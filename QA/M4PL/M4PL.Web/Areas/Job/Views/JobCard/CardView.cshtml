

@using System.Collections
@using M4PL.Web.Providers
@using M4PL.Utilities;
@using M4PL.Entities.Support;
@using DevExpress.Data.Filtering.Helpers;
@using M4PL.Entities
@using M4PL.Web.Models;
@using M4PL.APIClient.ViewModels.Job;
@model  M4PL.Web.Models.CardViewResult<JobCardViewView>

@{
    ViewBag.Title = Model.PageName;
    Model.ReportRoute.OwnerCbPanel = "JobCardViewTileCbPanel";
    var customerDropdown = Model.Record.CompanyId.GetCustomerCompanyDropDown("Customer", Model, (Model.Record.ParentId > 0) ? Model.Record.ParentId : Model.SessionProvider.ActiveUser.OrganizationId, true);
    customerDropdown.OnInit = "M4PLCommon.VocReport.DefaultSelectedCustomer(s,e);";
    customerDropdown.ValueChangedEvent = string.Format("function(s, e) {{DevExCtrl.ComboBox.CustomerCardTileCbPanelChange(s, e, {0}, {1}); }}", Model.ReportRoute.OwnerCbPanel, Newtonsoft.Json.JsonConvert.SerializeObject(Model.ReportRoute));
    Model.Record.Id = 0;

}

@Html.DevExpress().RoundPanel(settings =>
{
    settings.Name = "pnlCardDashboard";
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.AllowCollapsingByHeaderClick = true;
    settings.ShowCollapseButton = true;
    settings.HeaderText = "Dashboard";
    settings.Collapsed = false;
    settings.ControlStyle.CssClass = "form-layout custom-job-report-advance-panel form-layout-pnlCardDashboard";
    settings.SetContent(() =>
    {
        ViewContext.Writer.Write("<div class='col-lg-12 col-md-12 col-sm-12 job-advance-report-form-row'>");
        ViewContext.Writer.Write("<div class='col-lg-4 col-md-4 col-sm-4 form-group style='padding-bottom: 0px;'>");
        ViewContext.Writer.Write(Html.Action(MvcConstants.ActionDropDownViewTemplate, M4PL.Entities.EntitiesAlias.Common.ToString(), new { Area = string.Empty, ReadOnly = false, strDropDownViewModel = Newtonsoft.Json.JsonConvert.SerializeObject(customerDropdown) }));
        ViewContext.Writer.Write("</div>");


        ViewContext.Writer.Write("<div class='col-lg-2 col-md-2 col-sm-2 custom-generate-report-btn form-group' style='padding: 7px;'>");
        ViewContext.Writer.Write(Html.DevExpress().Button(set =>
        {
            set.Name = "btnCardRefresh";
            set.EnableTheming = true;
            set.Text = "Refresh";
            set.AllowFocus = false;
            set.ControlStyle.CssClass = "form-btn";
            set.Width = 90;
            set.ClientSideEvents.Click = string.Format("function(s, e) {{M4PLCommon.VocReport.OnClickCardTileRefresh(s, e, {0}, {1}); }}", Model.ReportRoute.OwnerCbPanel, Newtonsoft.Json.JsonConvert.SerializeObject(Model.ReportRoute));
        }).GetHtml());
        ViewContext.Writer.Write("</div>");


        ViewContext.Writer.Write("</div>");
        ViewContext.Writer.Write("<div class='col-lg-12 col-md-12 col-sm-12 job-advance-report-form-row custom-jobcard-grid-header'>");
        ViewContext.Writer.Write(Html.Action(MvcConstants.ActionInnerCallBackPanel, new { strRoute = Newtonsoft.Json.JsonConvert.SerializeObject(Model.ReportRoute) }));
        ViewContext.Writer.Write("</div>");
    });


}).GetHtml()

