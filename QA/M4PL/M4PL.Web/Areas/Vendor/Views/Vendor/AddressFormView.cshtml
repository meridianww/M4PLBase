@model  M4PL.Web.Models.FormResult<M4PL.APIClient.ViewModels.Vendor.VendorView>
@using M4PL.Web.Providers
@using M4PL.Entities.Support;
@{
    ViewBag.Title = Model.PageName;
    var vendCorpContactDropDownViewModel = Model.Record.VendCorporateAddressId.GetValueOrDefault().GetContactDropDown("VendCorporateAddressId", Model, (Model.Record.ParentId > 0) ? Model.Record.ParentId : Model.SessionProvider.ActiveUser.OrganizationId);
    var vendBusContactDropDownViewModel = Model.Record.VendBusinessAddressId.GetValueOrDefault().GetContactDropDown("VendBusinessAddressId", Model, (Model.Record.ParentId > 0) ? Model.Record.ParentId : Model.SessionProvider.ActiveUser.OrganizationId);
    var vendWorkContactDropDownViewModel = Model.Record.VendWorkAddressId.GetValueOrDefault().GetContactDropDown("VendWorkAddressId", Model, (Model.Record.ParentId > 0) ? Model.Record.ParentId : Model.SessionProvider.ActiveUser.OrganizationId);
    vendCorpContactDropDownViewModel.EntityFor = M4PL.Entities.EntitiesAlias.CustVendContactInfo;
    vendCorpContactDropDownViewModel.ParentEntity = M4PL.Entities.EntitiesAlias.Vendor;
    vendBusContactDropDownViewModel.EntityFor = M4PL.Entities.EntitiesAlias.CustVendContactInfo;
    vendBusContactDropDownViewModel.ParentEntity = M4PL.Entities.EntitiesAlias.Vendor;
    vendWorkContactDropDownViewModel.EntityFor = M4PL.Entities.EntitiesAlias.CustVendContactInfo;
    vendWorkContactDropDownViewModel.ParentEntity = M4PL.Entities.EntitiesAlias.Vendor;
}
<div class="form-layout">
    <div class="col-lg-4 col-md-4 padding-rt-lt  set_border_right">
        @Html.Action(MvcConstants.ActionContactComboBox, M4PL.Entities.EntitiesAlias.Common.ToString(), new { Area = string.Empty, strDropDownViewModel = Newtonsoft.Json.JsonConvert.SerializeObject(vendCorpContactDropDownViewModel) })
    </div>
    <div class="col-lg-4 col-md-4 padding-rt-lt  set_border_right">
        @Html.Action(MvcConstants.ActionContactComboBox, M4PL.Entities.EntitiesAlias.Common.ToString(), new { Area = string.Empty, strDropDownViewModel = Newtonsoft.Json.JsonConvert.SerializeObject(vendBusContactDropDownViewModel) })
    </div>
    <div class="col-lg-4 col-md-4 padding-rt-lt">
        @Html.Action(MvcConstants.ActionContactComboBox, M4PL.Entities.EntitiesAlias.Common.ToString(), new { Area = string.Empty, strDropDownViewModel = Newtonsoft.Json.JsonConvert.SerializeObject(vendWorkContactDropDownViewModel) })
    </div>
</div>