@model dynamic
@{
    var route = ViewData[MvcConstants.tvRoute] != null ? ViewData[MvcConstants.tvRoute] as M4PL.Entities.Support.MvcRoute : new M4PL.Entities.Support.MvcRoute();
}

@Html.DevExpress().CallbackPanel(
               cbSettings =>
               {
                   cbSettings.Name = "cplTreeViewPanel";
                   cbSettings.CallbackRouteValues = new { Action = route.Action, Controller = route.Controller, Area = route.Area };
                   cbSettings.SetContent(() =>
                   {
                       Html.RenderAction(MvcConstants.ActionTreeViewCallback);
                   });
               }
           ).GetHtml()