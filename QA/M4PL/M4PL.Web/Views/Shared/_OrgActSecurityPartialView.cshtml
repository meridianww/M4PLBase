@model M4PL.Entities.Support.MvcRoute

@using System.Web.UI.WebControls

@Html.DevExpress().RoundPanel(settings =>
{
    settings.Name = "pnlOrgActSecurityRoundPanel";
    settings.Width = Unit.Percentage(100);
    settings.AllowCollapsingByHeaderClick = true;
    settings.ShowCollapseButton = true;
    settings.SettingsLoadingPanel.Enabled = true;
    settings.ControlStyle.CssClass = "form-layout";
    settings.HeaderText = "Security";
    settings.Collapsed = true;
    settings.Enabled = (Model.ParentRecordId > 0);
    settings.CallbackRouteValues = new { Action = "DataViewRoundPanel", Controller = Model.Controller, Area = Model.Area, strRoute = Newtonsoft.Json.JsonConvert.SerializeObject(Model) };



    settings.SetContent(() =>
    {
        Html.RenderAction(Model.Action, Model.Controller, new { Area = Model.Area });
    });
}).GetHtml()
