@model dynamic
@{
    var route = ViewData[MvcConstants.contentRoute] != null ? ViewData[MvcConstants.contentRoute] as M4PL.Entities.Support.MvcRoute : new M4PL.Entities.Support.MvcRoute();
}

@Html.DevExpress().CallbackPanel(
               cbSettings =>
               {
                   cbSettings.Name = "cplTreeView";
                   cbSettings.CallbackRouteValues = new { Action = route.Action, Controller = route.Controller, Area = route.Area };
                   cbSettings.SetContent(() =>
                   {
                       if (Model != null)
                           Html.RenderPartial(MvcConstants.ViewForm);
                   });
               }
           ).GetHtml()