@using M4PL.Utilities;
@model  M4PL.Web.Models.DashboardResult<M4PL.APIClient.ViewModels.AppDashboardView>
@{
    ViewBag.Title = Model.PageName;
}

@Html.DevExpress().Dashboard(settings =>
{
    settings.Name = "Dashboard";
    settings.AllowOpenDashboard = true;
    settings.AllowCreateNewDashboard = false;
    settings.AllowExportDashboard = true;
    settings.InitialDashboardId = Model.CallBackRoute.RecordId.ToString();
    settings.WorkingMode = DevExpress.DashboardWeb.WorkingMode.Designer;
    settings.ClientSideEvents.BeforeRender = " function onBeforeRender(s, e) { var dashboardControl = s.getDashboardControl(); dashboardControl.registerExtension(new DevExpress.Dashboard.DashboardPanelExtension(dashboardControl));}";
    settings.ClientSideEvents.DashboardEndUpdate = "DevExCtrl.Dashboard.OnDashboardEndUpdate";
    settings.ControllerName = Model.CallBackRoute.Controller;
}).GetHtml()