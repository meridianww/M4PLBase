
@using System.Web.UI.WebControls;
@model List<M4PL.Entities.SysRefModel>
@Html.DevExpress().ListBox(
                        listBoxSettings =>
                        {
                            listBoxSettings.Name = "lblEmployees";
                            listBoxSettings.Height = Unit.Percentage(100);
                            listBoxSettings.Width = Unit.Percentage(100);
                            listBoxSettings.ControlStyle.Border.BorderWidth = 0;

                            listBoxSettings.Properties.TextField = "SysRefDisplayName";
                            listBoxSettings.Properties.ValueField = "SysRefName";
                            listBoxSettings.Properties.ValueType = typeof(String);
                            listBoxSettings.Properties.ClientSideEvents.Init = "function(s,e){ DevExCtrl.ListBox.OnInit(lblEmployees);}";
                            listBoxSettings.Properties.ClientSideEvents.ValueChanged = "function(s,e){ DevExCtrl.ListBox.OnListBoxValueChanged(s,e);}";
                        }).BindList(Model).GetHtml();
