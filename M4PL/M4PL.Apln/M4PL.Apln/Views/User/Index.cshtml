@using System.Web.UI.WebControls
@model M4PL_API_CommonUtils.Response<M4PL.Entities.User>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    @Html.DevExpress().Menu(settings =>
        {
            settings.Name = "Users";
            settings.Width = Unit.Percentage(100);

            settings.Items.Add(item =>
            {
                item.Text = "Users";
            });
        }).GetHtml()
    <hr />
    @Html.Partial("_Messages", Model)
    <div class="row">
        <div class="col-md-6 form-group">
            <input id="btnAddNew" type="button" value="Add User" class="btn btn-group" onclick="@("window.location.href='" + @Url.Action("Create", "User") + "'");" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @Html.Action("UsersGridPartial")
        </div>
    </div>
</div>


@section Scripts{
    <script>
        webUrl = '@Url.Action("Index", "User")';
        //$(window).load(function () {
        //    $("#tblUsers").load();
        //});
    </script>
}
