@using System.Drawing;
@using System.Web.UI.WebControls;
@{
    Html.DevExpress().GridView(settings =>
    {
        settings.Name = "gvUsers";
        settings.CallbackRouteValues = new { Controller = "User", Action = "UsersGridPartial" };
        settings.Width = Unit.Percentage(100);
        settings.SettingsPager.Visible = true;
        settings.SettingsPager.PageSize = 10;

        settings.KeyFieldName = "SysUserID";
        settings.Columns.Add("SysScreenName", "Screen Name");
        settings.Columns.Add("ConFullName", "Full Name");
        settings.Columns.Add("Status");

        settings.Columns.Add(column =>
        {
            column.SetDataItemTemplateContent(c =>
            {
                ViewContext.Writer.Write(
                    Html.ActionLink("Edit", "Edit", new { Id = DataBinder.Eval(c.DataItem, "SysUserID") },
                    new
    {
        style = "background: url('" + Url.Content("~/Images/phpQCqtZ2AM.jpg") + "') no-repeat center right; display:block; height:15px;width:45px;"
    })
    
                );
            });
            column.Settings.AllowDragDrop = DefaultBoolean.False;
            column.Settings.AllowSort = DefaultBoolean.False;
            column.Width = 40;
        });
        
        settings.Columns.Add(column =>
        {
            column.SetDataItemTemplateContent(c =>
            {
                ViewContext.Writer.Write(
                    Html.ActionLink("Remove", "Delete", new { Id = DataBinder.Eval(c.DataItem, "SysUserID") },
                        new { onclick = "return confirm('Do you really want to delete this record?')", style = "background: url('" + Url.Content("~/Images/phpY5HbjYAM.jpg") + "') no-repeat center right; display:block; height:15px;width:65px;" })
                );
            });
            column.Settings.AllowDragDrop = DefaultBoolean.False;
            column.Settings.AllowSort = DefaultBoolean.False;
            column.Width = 60;
        });
    }).Bind(Model).GetHtml();
}