@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<hgroup class="title">
    <h1 class="error">Error Occurred</h1>
    @{
        if (Model != null && Model.Exception != null)
        {
            <hr />
            <h4>@Model.Exception.Message</h4>
            <h4>@Model.Exception.InnerException.Message</h4>
        }
    }
</hgroup>
