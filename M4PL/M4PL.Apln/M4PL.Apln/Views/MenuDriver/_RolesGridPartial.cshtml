@using System.Drawing;
@using System.Web.UI.WebControls;
@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "gvRoles";
        settings.CallbackRouteValues = new { Controller = "MenuDriver", Action = "RolesGridPartial" };
        settings.Width = Unit.Percentage(100);
        settings.SettingsPager.Visible = true;
        settings.SettingsPager.PageSize = 10;

        settings.KeyFieldName = "OrgRoleID";
        settings.Columns.Add("OrgRoleCode", "Role Code");
        settings.Columns.Add("OrgRoleTitle", "Role Title");
    }).Bind(Model).GetHtml();
}