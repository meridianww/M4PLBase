@*@model M4PL.Entities.User*@
@using System.Web.UI.WebControls
@{
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <h2>Add Roles</h2>
    <hr />
    <form id="frmMenuDriver" enctype="multipart/form-data" method="post">
        <div class="row">
            <div class="col-md-12 form-group">
                <fieldset>
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <label>Role Code</label>
                            @Html.DevExpress().TextBox(settings =>
                            {
                                settings.Name = "txtRoleCode";
                                settings.Properties.NullText = "Role Code";
                                settings.ControlStyle.CssClass = "form-control";
                                settings.Width = Unit.Percentage(100);
                            }).GetHtml()
                        </div>
                        <div class="col-md-4 form-group">
                            <label>Role Title</label>
                            @Html.DevExpress().TextBox(settings =>
                            {
                                settings.Name = "txtRoleTitle";
                                settings.Properties.NullText = "Role Title";
                                settings.ControlStyle.CssClass = "form-control";
                                settings.Width = Unit.Percentage(100);
                            }).GetHtml()
                        </div>
                        <div class="col-md-4 form-group">
                            <label>Select Sort Order</label>
                            @Html.DevExpress().ComboBox(settings =>
                            {
                                settings.Name = "cmbRoleSortOrder";
                                settings.Width = Unit.Percentage(100);
                                settings.ControlStyle.CssClass = "form-control";

                                settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                                settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                                settings.SelectedIndex = 0;

                                settings.Properties.ValueType = typeof(int);
                                settings.Properties.Items.Add("1", 1);
                                settings.Properties.Items.Add("2", 2);
                                settings.Properties.Items.Add("3", 3);
                            }).GetHtml()
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label>Role Description</label>
                            @Html.DevExpress().Memo(settings =>
                            {
                                settings.Name = "txtRoleDesc";
                                settings.Properties.NullText = "Role Description";
                                settings.ControlStyle.CssClass = "form-control";
                                settings.Width = Unit.Percentage(100);
                                settings.Height = Unit.Pixel(100);
                            }).GetHtml()
                        </div>
                    </div>
                </fieldset>
            </div>

        </div>

        <div class="row">
            <div class="col-md-12 form-group">
                <fieldset>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Select Contact</label>
                            @Html.Action("ContactsComboBoxPartial", "Contact")
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Select Organization</label>
                            @Html.Action("OrganizationComboBoxPartial", "Organization")
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label>Organization Description</label>
                            @Html.DevExpress().Memo(settings =>
                    {
                        settings.Name = "txtOrgDesc";
                        settings.Properties.NullText = "Organization Description";
                        settings.ControlStyle.CssClass = "form-control";
                        settings.Width = Unit.Percentage(100);
                        settings.Height = Unit.Pixel(100);
                    }).GetHtml()
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 form-group">
                <fieldset>
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <label>Select Program</label>
                            @Html.DevExpress().ComboBox(settings =>
                {
                    settings.Name = "cmbProgram";
                    settings.Width = Unit.Percentage(100);
                    settings.ControlStyle.CssClass = "form-control";

                    settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                    settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                    settings.SelectedIndex = 0;

                    settings.Properties.ValueType = typeof(int);
                    settings.Properties.Items.Add("Program 1", 1);
                    settings.Properties.Items.Add("Program 2", 2);
                    settings.Properties.Items.Add("Program 3", 3);
                }).GetHtml()
                        </div>
                        <div class="col-md-4 form-group">
                            <label>Select Project</label>
                            @Html.DevExpress().ComboBox(settings =>
                {
                    settings.Name = "cmbProject";
                    settings.Width = Unit.Percentage(100);
                    settings.ControlStyle.CssClass = "form-control";

                    settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                    settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                    settings.SelectedIndex = 0;

                    settings.Properties.ValueType = typeof(int);
                    settings.Properties.Items.Add("Project 1", 1);
                    settings.Properties.Items.Add("Project 2", 2);
                    settings.Properties.Items.Add("Project 3", 3);
                }).GetHtml()

                        </div>
                        <div class="col-md-4 form-group">
                            <label>Select Job</label>
                            @Html.DevExpress().ComboBox(settings =>
                {
                    settings.Name = "cmbJob";
                    settings.Width = Unit.Percentage(100);
                    settings.ControlStyle.CssClass = "form-control";

                    settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                    settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                    settings.SelectedIndex = 0;

                    settings.Properties.ValueType = typeof(int);
                    settings.Properties.Items.Add("Job 1", 1);
                    settings.Properties.Items.Add("Job 2", 2);
                    settings.Properties.Items.Add("Job 3", 3);
                }).GetHtml()
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>

        <hr />
        <div class="row">
            <div class="text-center">
                <input id="btnSave" type="button" value="Save" class="btn btn-primary" />
                <input id="Reset1" type="reset" value="Clear" class="btn btn-default" />
                <input id="btnBack" type="button" value="Back" class="btn btn-default" onclick="GoBack();" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/Scripts/App/MenuDriver.js"></script>
    <script type="text/javascript">
        var BackUrl = '@Url.Action("Index", "MenuDriver")';
        function GoBack() {
            window.location.href = BackUrl;
        }
    </script>
}

@section Head{
    <style type="text/css">
        fieldset {
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
            border: 1px solid #999;
            box-shadow: 0 0 1px;
            padding: 12px;
        }
    </style>
}