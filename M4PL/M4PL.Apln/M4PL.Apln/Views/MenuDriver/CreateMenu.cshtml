@using System.Web.UI.WebControls
@{
    ViewBag.Title = "Create Menu";
}

<div class="container-fluid">
    <h2>Add Roles to Menus</h2>
    <hr />
    <form id="frmMenus" enctype="multipart/form-data" method="post">
        
        <div class="row">
            <div class="col-md-12 form-group">
                <fieldset>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Select Role</label>
                            @Html.DevExpress().ComboBox(settings =>
                            {
                                settings.Name = "cmbRole";
                                settings.Width = Unit.Percentage(100);
                                settings.ControlStyle.CssClass = "form-control";

                                settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                                settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                                settings.SelectedIndex = 0;

                                settings.Properties.ValueType = typeof(int);
                                settings.Properties.Items.Add("Role 1", 1);
                                settings.Properties.Items.Add("Role 2", 2);
                                settings.Properties.Items.Add("Role 3", 3);
                            }).GetHtml()
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Select Menu Module</label>
                            @Html.DevExpress().ComboBox(settings =>
                            {
                                settings.Name = "cmbModule";
                                settings.Width = Unit.Percentage(100);
                                settings.ControlStyle.CssClass = "form-control";

                                settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                                settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                                settings.Properties.AllowNull = true;
                                settings.SelectedIndex = 0;

                                settings.Properties.ValueType = typeof(int);
                                settings.Properties.Items.Add("--- Select Menu Module ---", 0);
                                settings.Properties.Items.Add("Module 1", 1);
                                settings.Properties.Items.Add("Module 2", 2);
                                settings.Properties.Items.Add("Module 3", 3);
                            }).GetHtml()
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Select Menu</label>
                            @Html.DevExpress().ComboBox(settings =>
                            {
                                settings.Name = "cmbMenu";
                                settings.Width = Unit.Percentage(100);
                                settings.ControlStyle.CssClass = "form-control";

                                settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                                settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                                settings.Properties.AllowNull = true;
                                settings.SelectedIndex = 0;

                                settings.Properties.ValueType = typeof(int);
                                settings.Properties.Items.Add("--- Select Menu ---", 0);
                                settings.Properties.Items.Add("Menu 1", 1);
                                settings.Properties.Items.Add("Menu 2", 2);
                                settings.Properties.Items.Add("Menu 3", 3);
                            }).GetHtml()
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Select Security Data</label>
                            @Html.DevExpress().ComboBox(settings =>
                            {
                                settings.Name = "cmbSecurity";
                                settings.Width = Unit.Percentage(100);
                                settings.ControlStyle.CssClass = "form-control";

                                settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                                settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                                settings.Properties.AllowNull = true;
                                settings.SelectedIndex = 0;

                                settings.Properties.ValueType = typeof(int);
                                settings.Properties.Items.Add("--- Select Security Data ---", 0);
                                settings.Properties.Items.Add("View", 1);
                                settings.Properties.Items.Add("Add/Delete", 2);
                                settings.Properties.Items.Add("Edit", 3);
                            }).GetHtml()
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>

        <hr />
        <div class="row">
            <div class="text-center">
                <input id="btnSaveMenus" type="button" value="Save" class="btn btn-primary" />
                <input id="Reset1" type="reset" value="Clear" class="btn btn-default" />
                <input id="btnBack" type="button" value="Back" class="btn btn-default" onclick="GoBack();" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/Scripts/App/MenuDriver.js"></script>
    <script type="text/javascript">
        var BackUrl = '@Url.Action("Index", "MenuDriver")';
        function GoBack() {
            window.location.href = BackUrl;
        }
    </script>
}

@section Head{
    <style type="text/css">
        fieldset {
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
            border: 1px solid #999;
            box-shadow: 0 0 1px;
            padding: 12px;
        }
    </style>
}