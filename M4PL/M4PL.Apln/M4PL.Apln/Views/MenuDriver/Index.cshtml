@using System.Web.UI.WebControls
@{
    ViewBag.Title = "Settings";
}

<div class="container-fluid">
    @Html.DevExpress().Menu(settings =>
        {
            settings.Name = "Settings";
            settings.Width = Unit.Percentage(100);

            settings.Items.Add(item =>
            {
                item.Text = "Settings";
            });
        }).GetHtml()
    <hr />
    <div class="row">
        <div class="col-md-3 form-group">
            @Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnAddNew";
                    settings.Text = "Add Roles";
                    settings.UseSubmitBehavior = false;
                    settings.ControlStyle.CssClass = "btn btn-default";
                    settings.RouteValues = Url.Action("CreateRole", "MenuDriver");
                }).GetHtml()
            @Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnAddNew1";
                    settings.Text = "Roles to Menus";
                    settings.UseSubmitBehavior = false;
                    settings.ControlStyle.CssClass = "btn btn-default";
                    settings.RouteValues = Url.Action("CreateMenu", "MenuDriver");
                }).GetHtml()

        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @Html.Action("RolesGridPartial")
        </div>
        <div class="col-md-6">
            @Html.Action("SecurityRolesPartial")
        </div>
    </div>
</div>