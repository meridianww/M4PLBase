@using System.Web.UI.WebControls
@{
    ViewBag.Title = "Settings";
}

<div class="container-fluid">
    @Html.DevExpress().Menu(settings =>
        {
            settings.Name = "Settings";
            settings.Width = Unit.Percentage(100);

            settings.Items.Add(item =>
            {
                item.Text = "Settings";
            });
        }).GetHtml()
    <hr />
    <div class="row">
        <div class="col-md-3 form-group">
            <input id="btnAddRoles" type="button" value="Add Roles" class="btn btn-group" onclick="@("window.location.href='" + @Url.Action("CreateRole", "MenuDriver") + "'");" />
            <input id="btnAddMenu" type="button" value="Roles to Menus" class="btn btn-group" onclick="@("window.location.href='" + @Url.Action("CreateMenu", "MenuDriver") + "'");" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @Html.Action("RolesGridPartial")
        </div>
        <div class="col-md-6">
            @Html.Action("SecurityRolesPartial")
        </div>
    </div>
</div>