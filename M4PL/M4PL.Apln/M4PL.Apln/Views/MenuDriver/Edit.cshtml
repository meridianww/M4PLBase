@using System.Web.UI.WebControls
@model M4PL_API_CommonUtils.Response<M4PL.Entities.Menus>
@{
    ViewBag.Title = "Edit Menu";
}

@Html.DevExpress().Menu(settings =>
{
    settings.Name = "MenuDriver";
    settings.Width = Unit.Percentage(100);
    settings.ClientSideEvents.ItemClick = "function(s, e) {NextPrevious(s, e);}";

    settings.Items.Add(item =>
    {
        item.Name = "itmFirst";
        item.Text = "First";
        item.Image.IconID = DevExpress.Web.ASPxThemes.IconID.ArrowsDoublefirst16x16gray;
        item.ItemStyle.HorizontalAlign = HorizontalAlign.Left;
        item.ItemStyle.Width = Unit.Percentage(10);
        item.ClientEnabled = true;
    });
    settings.Items.Add(item =>
    {
        item.Name = "itmPrev";
        item.Text = "Previous";
        item.Image.IconID = DevExpress.Web.ASPxThemes.IconID.ArrowsDoubleprev16x16gray;
        item.ItemStyle.HorizontalAlign = HorizontalAlign.Left;
        item.ItemStyle.Width = Unit.Percentage(10);
        item.ClientEnabled = true;
    });
    settings.Items.Add(item =>
    {
        item.Name = "itmText";
        item.Text = "System Menu Driver Master";
        item.Image.IconID = DevExpress.Web.ASPxThemes.IconID.Chart3dclusteredcolumn16x16;
        item.ItemStyle.HorizontalAlign = HorizontalAlign.Center;
        item.ItemStyle.Width = Unit.Percentage(59);
    });
    settings.Items.Add(item =>
    {
        item.Name = "itmNext";
        item.Text = "Next";
        item.Image.IconID = DevExpress.Web.ASPxThemes.IconID.ArrowsDoublenext16x16gray;
        item.ItemStyle.HorizontalAlign = HorizontalAlign.Right;
        item.ItemStyle.Width = Unit.Percentage(10);
    });
    settings.Items.Add(item =>
    {
        item.Name = "itmLast";
        item.Text = "Last";
        item.Image.IconID = DevExpress.Web.ASPxThemes.IconID.ArrowsDoublelast16x16gray;
        item.ItemStyle.HorizontalAlign = HorizontalAlign.Right;
        item.ItemStyle.Width = Unit.Percentage(10);
        item.ClientEnabled = true;
    });
}).GetHtml()
<div class="form-group"></div>

<form id="frmMenuDriver" enctype="multipart/form-data" method="post" action='@Url.Action("Edit", "MenuDriver")'>
    @Html.Partial("_Messages", Model)
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
            @Html.DevExpress().RoundPanel(settings =>
                {
                    settings.Name = "pnlMenuDriverDetail";
                    settings.Width = Unit.Percentage(100);

                    settings.AllowCollapsingByHeaderClick = true;
                    settings.ShowCollapseButton = true;
                    settings.HeaderText = "Detail";
                    settings.Collapsed = false;
                    settings.SetContent(() =>
                    {
                        Html.RenderPartial("_MenuDriverDetailsFormPartial", Model.Data);
                    });
                }).GetHtml()
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
            @Html.DevExpress().RoundPanel(settings =>
                {
                    settings.Name = "pnlMenuIcons";
                    settings.Width = Unit.Percentage(100);

                    settings.AllowCollapsingByHeaderClick = true;
                    settings.ShowCollapseButton = true;
                    settings.HeaderText = "Icons";
                    settings.Collapsed = false;
                    settings.SetContent(() =>
                    {
                        Html.RenderPartial("_MenuDriverIconsFormPartial", Model.Data);
                    });
                }).GetHtml()
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
            @Html.DevExpress().RoundPanel(settings =>
                {
                    settings.Name = "pnlMenuExecutable";
                    settings.Width = Unit.Percentage(100);

                    settings.AllowCollapsingByHeaderClick = true;
                    settings.ShowCollapseButton = true;
                    settings.HeaderText = "Executable";
                    settings.Collapsed = false;
                    settings.SetContent(() =>
                    {
                        Html.RenderPartial("_MenuDriverExecutableFormPartial", Model.Data);
                    });
                }).GetHtml()
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="text-center">
            @Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnSave";
                    settings.Text = "Save";
                    settings.ControlStyle.CssClass = "btn btn-primary";
                    settings.UseSubmitBehavior = true;

                }).GetHtml()
            @Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnCancel";
                    settings.Text = "Cancel";
                    settings.UseSubmitBehavior = false;
                    settings.ControlStyle.CssClass = "btn btn-default";
                    settings.RouteValues = Url.Action("Index", "MenuDriver");
                }).GetHtml()
        </div>
    </div>
</form>
@section Scripts{
    <script src="~/Scripts/App/menudriver.js"></script>
}

@section Head{
    <link href="~/Content/MenuDriver.css" rel="stylesheet" />
}