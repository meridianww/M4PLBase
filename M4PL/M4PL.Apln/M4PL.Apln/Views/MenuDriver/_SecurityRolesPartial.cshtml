@using System.Drawing;
@using System.Web.UI.WebControls;
@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "gvSecurityRoles";
        settings.CallbackRouteValues = new { Controller = "MenuDriver", Action = "SecurityRolesPartial" };
        settings.Width = Unit.Percentage(100);
        settings.SettingsPager.Visible = true;
        settings.SettingsPager.PageSize = 10;

        settings.KeyFieldName = "SecurityLevelID";
        settings.Columns.Add("OrgRoleCode", "Role Code");
        settings.Columns.Add("OrgRoleTitle", "Role Title");
        settings.Columns.Add("SecModuleTitle", "Module");
        settings.Columns.Add("SecSecurityMenuTitle", "Menu");
    }).Bind(Model).GetHtml();
}