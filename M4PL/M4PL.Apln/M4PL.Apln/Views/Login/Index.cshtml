                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-md-12 form-group">
                            <div class="row-fluid">
                                <div class="row">
                                    <div class="input-field col-md-12">
                                        <i class="material-icons prefix">email</i>
                                        @Html.TextBoxFor(model => model.Email, new { @class = "validate" })
                                        <label for="emailId" class="validate">Email ID</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col-md-12">
                                        <i class="material-icons prefix">lock</i>
                                        @Html.PasswordFor(model => model.Password, new { @class = "validate" })
                                        <label for="password" class="validate">Password</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5 col-md-offset-0">
                            <div class="checkbox">
                                <label class="remem_ColorFont">
                                    <input type="checkbox">Remember Me
                                </label>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <a href="#" class="pull-right forgot_ColorMartop">Forgot password?</a>
                        </div>
                    </div>
                    <button type="submit" id="btnsubmit" class="btn btn-primary">Login</button>
                    <div class="form-group"><a href="#" class="regis_ColorFont">Register To Use The Meridian Transportation System</a></div>

                    <div class="text-center tag_color">Meridian 4<sup>th</sup> Party Logistics</div>
                    <div class="text-center tag_color">Copyright ©  2016 Meridian Worldwide Transportation Group</div>
                    <div class="text-center tag_color">All Rights Reserved World Wide</div>


                </form>

            </div>
        </div>

    </div>
</div>

