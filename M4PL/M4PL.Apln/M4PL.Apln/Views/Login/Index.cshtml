<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            
                <h1 class="text-center">Client Login</h1>
         
            <hr />
            <div class="well">
                <form method="post" action='@Url.Action("Login", "Login")'>
                    <div class="form-group">
                        <div class="row">
                            <img src="~/Images/M4plLogo.png" class="img-responsive mfpl_HeiWid" />
                            <p class="pull-right meri_Font">Meridian 4<sup>th</sup> Party Logistics(M4PL<sup>TM</sup>)</p>
