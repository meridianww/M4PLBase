@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ContentLayout.cshtml";
}

@section Head{
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
}

<style>
    body {
        width: 100%;
        height: 100vh;
        margin: 0;
        padding: 0;
        border: 0px;
    }

    header {
        width: 100%;
        height: 57px;
    }

    footer {
        background: #000;
        color: #fff;
        text-align: center;
    }

    .CenterOfLoginPage {
        width: 100%;
        height: calc(100% - 122px);
        background: #e2e6e9;
    }
</style>


<header>
    <div class="_LayoutBG" style="">
        <div class="row" style="background-color:#000;">
            <img src="~/Images/logo.png" class="img-responsive" style="min-height:20px; min-width:20px;padding-left:20px;" />
            @*@Html.Partial("_LoginPartial")*@
        </div>
    </div>
</header>
<div class="CenterOfLoginPage">
    <div>
        <div class="container centerdDiv" style="width:550px;margin:0 auto; border:1px solid lightgray;border-radius:5px;background:#fff;">

            <div class="col-md-offset-3 col-md-8" style="padding:10px 45px;font-weight:bold;font-size:16px;">
                Login to your account
            </div>

            <div class="row">

                <div class="col-md-9" style="margin-left: 65px;">
                    <form id="UserLogin">
                        <br><span id="error" class="error"></span>
                        <br>
                        <div class="form-group">
                            <label>EMAIL ID</label>
                            <input type="text" class="form-control newInput" spellcheck="false" name="Loginemail" placeholder="EMAIL" id="Loginemail" style="width:96%;">
                            <span id="erroremail" class="pull-right error"></span>
                            <span class="form-control-feedback glyphicon"></span>

                        </div>
                        <div class="form-group">
                            <label>PASSWORD</label>
                            <input type="password" class="form-control newInput" spellcheck="false" name="Loginpassword" placeholder="PASSWORD" id="Loginpassword" style="width:96%;">
                        </div>


                        <div class="form-actions" style="text-align:center;">
                            <button type="submit" id="btnsubmit" class="col-md-14 btn btn-BTGreen  NoBorderRadius SignuploginBTNfont CustomFullWidth" style="margin:10px;background:#2562a5;color:#fff;padding:8px 6px;min-width:100px;border-radius:5px;">LOGIN</button>

                            <br>
                            <input id="chkRememberMe" type="checkbox" checked="checked"><span class="SmallFontSize margin forgotpwdcolor">Keep me signed in</span>

                        </div>

                    </form>
                </div>
            </div>
            <br />

            @section Scripts{
                <script src="~/Scripts/App/User.js"></script>
                <script>
                    var UrlRoot = {};
                    UrlRoot.homeUrl = '@Url.Action("Index", "Home")';
                </script>
            }
        </div>
    </div>

</div>
<footer style="">
    <p>© 2016 Meridian Worldwide Transportation Group. All Rights Reserved.</p>
</footer>