@using System.Drawing;
@using System.Web.UI.WebControls;
@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "gvOrganizations";
        settings.CallbackRouteValues = new { Controller = "Organization", Action = "OrganizationGridPartial" };
        settings.Width = Unit.Percentage(100);
        settings.SettingsPager.Visible = true;
        settings.SettingsPager.PageSize = 10;

        settings.KeyFieldName = "OrganizationID";
        settings.Columns.Add("OrgCode", "Organization Code");
        settings.Columns.Add("OrgTitle", "Organization Title");
        settings.Columns.Add("OrgGroup", "Organization Group");
        settings.Columns.Add("OrgStatus", "Status");
    }).Bind(Model).GetHtml();
}