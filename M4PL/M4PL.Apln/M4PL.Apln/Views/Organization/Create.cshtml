@using System.Web.UI.WebControls
@model M4PL.Entities.Organization
@{
    ViewBag.Title = "Save Organization";
}

<div class="container-fluid">
    <h2>Add Organization</h2>
    <hr />
    <form id="frmOrganization" enctype="multipart/form-data" method="post">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6  form-group">
                <label>Organization Code</label>
                @Html.DevExpress().TextBox(settings =>
                            {
                                settings.Name = "organizationcode";
                                settings.ControlStyle.CssClass = "txtOrgCode";
                                settings.Properties.NullText = "Organization Code";
                                settings.ControlStyle.CssClass = "form-control";
                                settings.Width = Unit.Percentage(100);
                            }).GetHtml()
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6  form-group">
                <label>Organization Title</label>
                @Html.DevExpress().TextBox(settings =>
                            {
                                settings.Name = "organizationtitle";
                                settings.ControlStyle.CssClass = "txtOrgTitle";
                                settings.Properties.NullText = "Organization Title";
                                settings.ControlStyle.CssClass = "form-control";
                                settings.Width = Unit.Percentage(100);
                            }).GetHtml()
            </div>

        </div>

        <div class="row">
            <div class="col-md-6 form-group">
                <label>Organization Group</label>
                @Html.DevExpress().TextBox(settings =>
                            {
                                settings.Name = "organizationgroup";
                                settings.ControlStyle.CssClass = "txtOrgGroup";
                                
                                settings.Properties.NullText = "Organization Group";
                                settings.ControlStyle.CssClass = "form-control";
                                settings.Width = Unit.Percentage(100);
                            }).GetHtml()
            </div>
            <div class="col-md-3 form-group">
                <label>Sort Order</label>
                @Html.DevExpress().ComboBox(settings =>
                            {
                                settings.Name = "title";
                                settings.ControlStyle.CssClass = "cmbOrgSortOrder";
                                settings.Width = Unit.Percentage(100);
                                settings.ControlStyle.CssClass = "form-control";
                                settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                                settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                                settings.SelectedIndex = 0;
                                settings.Properties.ValueType = typeof(int);
                                settings.Properties.Items.Add("1", 1);
                                settings.Properties.Items.Add("2", 2);
                                settings.Properties.Items.Add("3", 3);
                            }).GetHtml()

            </div>
            <div class="col-md-3 form-group">
                <label>Status</label>
                @Html.DevExpress().ComboBox(settings =>
                            {
                                settings.Name = "status";
                                settings.ControlStyle.CssClass = "cmbOrgStatus";
                                settings.Width = Unit.Percentage(100);
                                settings.ControlStyle.CssClass = "form-control";
                                settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                                settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                                settings.SelectedIndex = 0;
                                settings.Properties.ValueType = typeof(int);
                                settings.Properties.Items.Add("Active", 1);
                                settings.Properties.Items.Add("Suspended", 2);

                            }).GetHtml()
            </div>
        </div>


        <div class="row">
            <div class="col-md-12 form-group">
                <label>Description</label>
                @Html.DevExpress().Memo(settings =>
                            {
                                settings.Name = "description";
                                settings.ControlStyle.CssClass = "txtOrgDesc";
                                settings.Properties.NullText = "Description";
                                settings.ControlStyle.CssClass = "form-control";
                                settings.Width = Unit.Percentage(100);
                                settings.Height = Unit.Pixel(94);
                            }).GetHtml()
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="text-center">
                <input id="btnSave" type="button" value="Save" class="btn btn-primary" />
                <input id="Reset1" type="reset" value="Clear" class="btn btn-default" />
                @*<input id="btnBack" type="button" value="Back" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Index", "User") + "'");" />*@
                <input id="btnBack" type="button" value="Back" class="btn btn-default" onclick="GoBack();" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/Scripts/App/Organization.js"></script>
    <script type="text/javascript">
        var BackUrl = '@Url.Action("Index", "Organization")';
        function GoBack() {
            window.location.href = BackUrl;
        }
    </script>
}
